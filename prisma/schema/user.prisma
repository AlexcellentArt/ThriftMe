model User {
id Int @id @unique @default(autoincrement())
name String // ex: Kesha
email String
password String
favorites Item[]@relation("Favorited")
past_transactions_seller Past_Transactions[] @relation("Sold") // user has sold in these transactions
past_transactions_buyer Past_Transactions[] @relation("Bought") // user has bought in these transactions

browsing_history Browsing_History? @relation("Browsing") // optional to account for fresh user
shopping_cart Shopping_Cart? @relation("Shopping") // optional to account for empty cart
items Item[] @relation("Seller") // user is the seller of these items
}